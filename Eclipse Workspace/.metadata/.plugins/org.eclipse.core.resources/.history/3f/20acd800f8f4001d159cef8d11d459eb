package server;
import java.io.*; 
import java.net.*;
import server.ClientHandler; 
public class Server{ 
 public static void main(String[] args) throws IOException { 
     ServerSocket serverSocket = new ServerSocket(1000); 
     System.out.println("Attendre une nouvelle connexion...");
     while (true){ 
         Socket socket = null;       
         try{ 
        	 socket = serverSocket.accept();  
             System.out.println("Un nouveau client est connecté : " + socket); 
             BufferedReader entree = new BufferedReader( new 
 							InputStreamReader(socket.getInputStream())); 
 			 PrintWriter sortie = new PrintWriter(socket.getOutputStream(), true);
             System.out.println("Assigner une nouvelle thread à ce client"); 
             Thread clientHan = new ClientHandler(socket, entree, sortie); 
             clientHan.start();        
         }
         catch (Exception e){ 
        	 socket.close(); 
             e.printStackTrace(); 
         } 
     }//end of while (true){
 }//end of main
}//end of Server
